    = image_tag("logo.svg", size:"35x35", alt:"logo", class:"d-inline align-middle")
    %span.navbar-text 映画・文学めし
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item
        = link_to "Home", root_path, class: "nav-link"
      %li.nav-item
        = link_to "About", about_path, class: "nav-link"
      %li.nav-item
        = link_to "Posts", recipes_path, class: "nav-link"
      %li.nav-item.dropdown
        %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          Search
        .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
          = link_to "作品から探す", '#', class: "dropdown-item"
          = link_to "作家から探す", '#', class: "dropdown-item"
          .dropdown-divider
          = link_to "料理名から探す", '#', class: "dropdown-item"
      - if logged_in?
        %li.nav-item
          = link_to "Users", users_path, class: "nav-link"
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Account
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to "NewPost", new_recipe_path, class: "dropdown-item"
            = link_to "Profile", current_user, class: "dropdown-item"
            = link_to "Settings", edit_user_path(current_user), class: "dropdown-item"
            .dropdown-divider
            = link_to "Logout", logout_path, method: :delete, class: "dropdown-item"
      - else
        .nav-item
          = link_to "Login", login_path, class: "nav-link"
          %div
