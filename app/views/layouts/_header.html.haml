%nav.navbar.fixed-top.navbar-expand-lg.navbar-light.py-0
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  = link_to root_path , class:"navbar-brand" do
    = image_tag("logo.svg", size:"35x35", alt:"logo", class:"d-inline align-middle")
    %span.navbar-text 映画・文学めし
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item
        = link_to "Home", root_path, class: "nav-link"
      %li.nav-item
        = link_to "About", about_path, class: "nav-link"
      - if logged_in?
        %li.nav-item
          = link_to "Users", users_path, class: "nav-link"
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Account
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to "NewPost", new_recipe_path, class: "dropdown-item"
            = link_to "Profile", current_user, class: "dropdown-item"
            = link_to "Settings", edit_user_path(current_user), class: "dropdown-item"
            .dropdown-divider
            = link_to "Logout", logout_path, method: :delete, class: "dropdown-item"
      - else
        .nav-item
          = link_to "Signup", signup_path, class: "nav-link"
        .nav-item
          = link_to "Login", login_path, class: "nav-link"
      = search_form_for @search, url: recipes_path do |f|
        .form-inline
          = f.text_field :title_or_work_or_author_or_tags_name_cont, class: "form-control", placeholder: "フリーワード検索"
          = f.submit 'Search', class: "btn btn-primary w-auto mb-0 mt-1"