.fields
  %li
    .row
      .col-7
        - field_with_errors = "field_with_errors" if @recipe_form.errors.include?(:"ingredient#{f.index}")
        .form-group{class: field_with_errors}
          = f.text_field :ingredient, placeholder: "例:鶏むね肉", class: 'form-control'
          - if @recipe_form.errors.include?(:"ingredient#{f.index}")
            %p{:style => "color: red;"}
              = @recipe_form.errors.full_messages_for(:"ingredient#{f.index}").first
      .col-4
        - field_with_errors = "field_with_errors" if @recipe_form.errors.include?(:"amount#{f.index}")
        .form-group{class: field_with_errors}
          = f.text_field :amount, placeholder: "例:200g", class: 'form-control'
          - if @recipe_form.errors.include?(:"amount#{f.index}")
            %p{:style => "color: red;"}
              = @recipe_form.errors.full_messages_for(:"amount#{f.index}").first
      .col-1
        = link_to_remove_field(f, {})
